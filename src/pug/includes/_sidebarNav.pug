-
  var pages = {
    'Home': 'index',
    'Alerts': 'alerts',
    'Buttons': 'buttons',
    'Cards': 'cards',
    'Colors': 'colors',
    'Icons': 'icons',
    'Notifications': 'notifications',
    'Typography': 'typography'
  };

.fixed-sidebar
  ul.fixed-sidebar__nav
    each url, page in pages
      if page === currentPage
        li.selected
          a(href= url + '.html')= page
      else
        li
          a(href= url + '.html')= page
